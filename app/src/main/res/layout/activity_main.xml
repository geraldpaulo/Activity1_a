<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_red"
        android:layout_width="215dp"
        android:layout_height="58dp"
        android:layout_marginTop="56dp"
        android:text="Red"
        android:textSize="24sp"
        app:backgroundTint="#FF0333"
        app:layout_constraintBottom_toTopOf="@+id/btn_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_pink"
        android:layout_width="215dp"
        android:layout_height="58dp"
        android:layout_marginTop="428dp"
        android:text="Pink"
        android:textSize="24sp"
        app:backgroundTint="#E44980"
        app:layout_constraintBottom_toTopOf="@+id/btn_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="215dp"
        android:layout_height="58dp"
        android:text="Reset"
        android:textColor="#040404"
        android:textSize="24sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="215dp"
        android:layout_height="58dp"
        android:layout_marginTop="344dp"
        android:text="Green"
        android:textSize="24sp"
        app:backgroundTint="#479704"
        app:layout_constraintBottom_toTopOf="@+id/btn_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="215dp"
        android:layout_height="58dp"
        android:layout_marginTop="228dp"
        android:text="Yellow"
        android:textSize="24sp"
        app:backgroundTint="#F6EA62"
        app:layout_constraintBottom_toTopOf="@+id/btn_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="215dp"
        android:layout_height="58dp"
        android:layout_marginTop="144dp"
        android:text="Blue"
        android:textSize="24sp"
        app:backgroundTint="#2979FF"
        app:layout_constraintBottom_toTopOf="@+id/btn_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:strokeWidth="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>